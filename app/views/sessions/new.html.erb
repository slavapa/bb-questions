<% provide(:title, t(:log_id)) %>
<h1><%= t(:log_id) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, t('activerecord.attributes.user.email')  %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t('activerecord.attributes.user.password') %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span class='label_checkbox'>Remember me on this computer</span>
      <% end %>
		      
      <br/>
      <%= f.submit t(:log_id), class: "btn btn-primary btn-small", id: 'btn_log_in' %>
    <% end %>

  </div>
</div>